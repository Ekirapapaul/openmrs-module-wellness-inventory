<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="org.openmrs.module.wellnessinventory.api.model">
    <class name="InventoryItem"
           table="inventory_item">
        <id name="itemId" type="int" column="item_id" unsaved-value="0">
            <generator class="native" />
        </id>
        <discriminator column="item_id" insert="false" />
        <property name="uuid" type="java.lang.String" column="uuid" length="38" unique="true" />
        <property name="itemCode" type="java.lang.String" column="item_code" length="38" />
        <property name="name" type="java.lang.String" column="name" length="255" not-null="true"/>
        <property name="description" type="java.lang.String" column="description" length="255" />
    </class>
</hibernate-mapping>
